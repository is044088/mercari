= render '/items/header'

.mypage_contents
  .mypage-content.mypage-default-content
    .card-box
      .card-box__header.mypage-default-content__header
        %h1.mydate-title
          クレジットカード情報入力
      .card-box__form
        = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
          .form-group
            %label.user-label
              カード番号
            %span.form-require
              必須
            = text_field_tag "number", "", class: "number new-form-default", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            .card-img
              = image_tag "mastercard.png", class:"card-img"
              = image_tag "visa.png", class:"card-img"
              = image_tag "saisoncard.png",class:"card-img"
              = image_tag "jcbcard.png",class:"card-img"
              = image_tag "axcard.png",class:"card-img"
              = image_tag "discover.png",class:"card-img"
              = image_tag "dinersclub.png",class:"card-img"
          .form-group          
            %label.user-label
              有効期限
            %span.form-require
              必須
            .div
              .mydate-select-box.card-half
                = icon "fas","chevron-down", class:"mydate-select-arrow"
                %select#exp_month{name: "exp_month", type: "text", class: "select-default-full"}
                  %option{value: ""} --
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
              %span.form-text
                月
              .mydate-select-box.card-half
                = icon "fas","chevron-down", class:"mydate-select-arrow"
                %select#exp_year{name: "exp_year", type: "text", class: "select-default-full"}
                  %option{value: ""} --
                  %option{value: "2019"}19
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
              %span.form-text
                年
          .form-group
            %label.user-label
              セキュリティコード
            %span.form-require
              必須
            = text_field_tag "cvc", "", class: "cvc new-form-default", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
            .text-right
              = icon 'fas','question-circle',class:"form-bottom-text-link"
              = link_to "カード背面裏番号とは？","#",class:"form-bottom-text-link"
          .form-group
            .other-btn.form-next-btn#card_token
              #card_token
              = submit_tag "追加する", id: "token_submit", class: "F-white"

  = render '/layouts/mypage/user-side'

= render '/items/aside'
= render '/items/footer'

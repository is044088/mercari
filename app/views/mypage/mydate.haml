= render '/items/header'

- if flash[:notice]
  .mypage-flash-notice
    = flash[:notice]

.mypage_contents
  .mypage-content.mypage-default-content
    .mydate-box.mypage-default-content__header
      .mydate-box__header
        %h1.mydate-title
          本人情報の登録
      .mydate-box__form
        .mydate-ex
          .mydate-ex__text
            %p
              お客さまの本人情報をご登録ください。
            %p
              登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
          .mydate-ex__link.text-right
            = link_to "本人確認書類のアップロードについて","#", class:"form-bottom-text-link"
            %span.F-bold.form-bottom-text-link
              >
        .form-group
          %label.user-label
            お名前
          %p
            ="#{current_user.family_name} #{current_user.first_name}"
        .form-group
          %label.user-label
            お名前カナ
          %p
            ="#{current_user.ja_family_name} #{current_user.ja_first_name}"
        .form-group
          %label.user-label
            生年月日
          %p
            ="#{current_user.birthday}"
        .form-group
          %label.user-label
            郵便番号
          %span.form-arbitrary
            任意
          %input{name:"postal_code", type:"string", placeholder:"例）1234567", class:"new-form-default"}
        .form-group          

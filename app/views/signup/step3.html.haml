-# 住所関係
.new-form
  .new-form-box
    .new-form-box__header
      = image_tag "mrcr-logo.png",class:"login-logo"
      .new-form-box__header__nav
        %ol.clearfix
          %li.active
            会員情報
            .progress-status
              .progress-bar
          %li
            電話番号認証
            .progress-status
              .progress-bar
          %li
            お届け先住所入力
            .progress-status
              .progress-bar
          %li
            支払い方法
            .progress-status
              .progress-bar
          %li
            完了
            .progress-status
              .progress-bar
    .new-form-box__main
      .new-form-box__main__top
        %h3.top-text
          発送元・お届け先住所入力
      .new-form-box__main__form
        = form_for @user, url: step4_signup_index_path, method: :post do |f|
          = f.fields_for :address do |a|
            
            .form-group
              %label 郵便番号
              %span.form-require 必須
              = a.text_field :postal_code, placeholder:"例) 123-4567", class:"new-form-default"

            .form-group
              %label 都道府県
              %span.form-require 必須
              = a.text_field :prefecture, placeholder:"例) 東京都", class:"new-form-default"

            .form-group
              %label 市区町村
              %span.form-require 必須
              = a.text_field :city, placeholder:"例) 渋谷区", class:"new-form-default"

            .form-group
              %label 番地
              %span.form-require 必須
              = a.text_field :street_number, placeholder:"例) 神南1-2-3", class:"new-form-default"

            .form-group
              %label 建物名
              %span.form-require 任意
              = a.text_field :building_name, placeholder:"例) marumaru 9F ", class:"new-form-default"
            .form-group
              %label 番号
              %span.form-require 任意
              = a.text_field :delivery_phone, placeholder:"例) 090-1234-5678", class:"new-form-default"
            
                                          
            .new-form-box__main__bottom
              .form-group
                .other-btn.form-next-btn
                  = f.submit value: '登録する', class:"F-white"
            
    .new-box__footer
      .new-box__footer__nav
        %ul
          %li.new-nav-list
            %a{href:"/"}
              プライバシーポリシー
          %li.new-nav-list
            %a{href:"/"}
              メルカリ利用規約
          %li.new-nav-list
            %a{href:"/"}
              特定商取引に関する規約
      .new-box__footer__icon
        = image_tag 'mrcr-footer-icon.png',class:"new-footer-icon"
